{% extends 'base.html.twig' %}

{% block title %}Post index
{% endblock %}

{% block body %}
	<h1>Post index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Likes</th>
				<th>Description</th>
				<th>Image</th>
				<th>Date</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for post in posts %}
				<tr>
					<td>{{ post.id }}</td>
					<td>{{ post.likes }}</td>
					<td>{{ post.description }}</td>
					<td>{{ post.image }}</td>
					{# Linea de abajo carga la imagen #}
					{# <td class="img"><img src="{{ asset('images/' ~ post.image) }}" alt="{{ post.image }}"></td> #}
					<td>{{ post.date ? post.date|date('Y-m-d') : '' }}</td>
					<td>
						<a href="{{ path('app_post_show', {'id': post.id}) }}">show</a>
						<a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_post_new') }}">Create new</a>
{% endblock %}
